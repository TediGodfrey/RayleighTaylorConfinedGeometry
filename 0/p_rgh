{
    leftWall_cyclic
    {
        type            cyclic;
    }

    rightWall_cyclic
    {
        type            cyclic;
    }

    bottomWall
    {
	type		zeroGradient;
        //type            fixedFluxPressure;
        //value           uniform 0;
    }

    topWall
    {
	type		zeroGradient;
        //type            fixedFluxPressure;
        //value           uniform 0;
    }

    backAndFront
    {
	type		empty;
    }
}

